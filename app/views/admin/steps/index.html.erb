<p id="notice"><%= notice %></p>

<h1>Steps</h1>

<table>
  <thead>
    <tr>
      <th>Journey</th>
      <th>Title</th>
      <th>Keywords</th>
      <th>Is waiting step</th>
      <th>Slug</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @steps.each do |step| %>
      <tr>
        <td><%= step.journey %></td>
        <td><%= step.title %></td>
        <td><%= step.keywords %></td>
        <td><%= step.is_waiting_step %></td>
        <td><%= step.slug %></td>
        <td><%= step.description %></td>
        <td><%= link_to 'Show', [:admin, step] %></td>
        <td><%= link_to 'Edit', edit_admin_step_path(step) %></td>
        <td><%= link_to 'Destroy', [:admin, step], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

