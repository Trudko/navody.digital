<div class="sdn-searchbar-wrapper">
  <div class="sdn-searchbar-wrapper__item sdn-searchbar govuk-width-container">
    <%= form_tag(search_path, method: :get) do %>
      <div class="sdn-searchbar">
        <div class="sdn-searchbar__item sdn-searchbar-block">
          <div class="sdn-searchbar-block__item">
            <%= search_field_tag(:q, @q, class: 'govuk-input', placeholder: 'Vyhľadať životnú situáciu') %>
          </div>
          <div class="sdn-searchbar-block__item sdn-searchbar-block__item--stretched">
            <%= submit_tag("Hľadať", class: 'govuk-button govuk-button--large') %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
