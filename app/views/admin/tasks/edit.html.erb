<%= render 'breadcrumbs', crumbs: [
    ['Journeys', admin_journeys_url],
    [@journey.title, admin_journey_url(@journey)],
    ['Steps', admin_journey_steps_url(@journey)],
    [@step.title, admin_journey_step_url(@journey, @step)],
    ['Tasks', admin_journey_step_tasks_path(@journey, @step)],
    [@task.title, admin_journey_step_task_path(@journey, @step, @task)]
  ], current: 'Edit' %>

<%= render 'form', task: @task %>

<%= link_to 'Show', [:admin, @task.step.journey, @task.step, @task] %> |
<%= link_to 'Back', admin_journey_step_tasks_path(@task.step.journey, @task.step) %>
